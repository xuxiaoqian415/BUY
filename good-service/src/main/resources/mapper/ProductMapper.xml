<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zust.buy.good.mapper.ProductMapper">

    <select id="getProductList" parameterType="java.util.Map" resultType="com.zust.buy.common.entity.Product">
        SELECT p.*, st.`name` as typeName
        FROM t_product p LEFT JOIN t_small_type st ON p.typeId = st.id
        <where>
            p.deleted = 0
            <if test="name != null and name != ''">
                and p.name LIKE concat('%', #{name}, '%')
            </if>
            <if test="typeId != null and typeId != 0">
                and p.typeId = #{typeId}
            </if>
            <if test="isSwiper != null and isSwiper != ''">
                and p.isSwiper = #{isSwiper}
            </if>
        </where>
        order by
        <choose>
            <when test="isSwiper != null and isSwiper != ''">
                p.swiperSort asc
            </when>
            <otherwise>
                p.create_time desc
            </otherwise>
        </choose>
        <if test="start != null and start != 0 and pageSize != null and pageSize != 0">
            limit #{start}, #{pageSize}
        </if>
    </select>

    <select id="getTotal" parameterType="java.util.Map" resultType="int">
        select count(*)
        from t_product p
        <where>
            p.deleted = 0
            <if test="name != null and name != ''">
                and p.name LIKE concat('%', #{name}, '%')
            </if>
            <if test="typeId != null and typeId != 0">
                and p.typeId = #{typeId}
            </if>
            <if test="isSwiper != null and isSwiper != ''">
                and p.isSwiper = #{isSwiper}
            </if>
        </where>
    </select>

</mapper>
